<section id="top-displayer" itemprop="articleSection">
    <background-banner id="background-banner" class="backgroundBanner">
    {{#each config.banner_background}}
        <picture>
            <source srcset="{{../img_url}}/{{this.url}}-thumbnail.webp" type="image/webp" 
            media="(min-width: 1200px)"/>
            <source srcset="{{../img_url}}/{{this.url}}-thumbnail.jpeg" type="image/jpeg" 
            media="(min-width: 1200px)"/>

            <img class="backgroundBanner__img" alt="Background Banner" 
            src="{{../img_url}}/{{this.url}}-thumbnail.jpeg" 
            srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw== 1200w"
            />
        </picture>
    {{/each}}
    </background-banner>
    <grid-container>
        <banner-main>
            <div id="glide_banner" class="glide">
                <div class="glide__track" data-glide-el="track">
                    <ul class="glide__slides">
                        {{#each config.banner}}
                        <li class="glide__slide">
                            <a href="#" class="frame">
                                <picture>
                                    <source 
                                    srcset="{{../img_url}}/{{this.url}}-thumbnail.webp" type="image/webp" 
                                    media="(min-width: 650px)"/>
                                    <source 
                                    srcset="{{../img_url}}/{{this.url}}-thumbnail.jpeg" type="image/jpeg" 
                                    media="(min-width: 650px)"/>
                                    <source 
                                    srcset="{{../img_url}}/{{this.url}}-thumbnail-small.webp" type="image/webp" 
                                    media="(min-width: 0px)"/>
                                
                                    <img style="width: 100%;height: 100%;"
                                    {{!-- width="800" height="400" --}}
                                    alt="banner" 
                                    src="{{../img_url}}/{{this.url}}-thumbnail.jpeg"
                                    />
                                </picture>
                            </a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="glide__arrows slider-nav" data-glide-el="controls">
                    <div class="glide__bullets slider-dot-container" data-glide-el="controls[nav]">
                        <button class="glide__bullet glide__bullet--custom slider-dot glide__bullet--active"
                            data-glide-dir="=0"></button>
