<section id="lastest-update-places" itemprop="articleBody">
    <wrapper-big class="container">

        <heading class="container">
            <h2 class="title">
                <a href="/comic/categories/all?_sort&column=updatedAt&order=-1"> Lastest Update</a>
            </h2>
            <icon-right>
                <i class="fas fa-chevron-right"></i>
            </icon-right>
        </heading>
        
        <grid-container>
            {{#each comics}}
            <item class="item item--border position-relative">
                <div class="intrinsic" style="--aspect-ratio: 92/120;">
                    <picture class="lazy">
                        <source data-srcset="{{../img_url}}/{{this.thumbnail.url}}-thumbnail-webp.webp"
                            data-srcmain="{{../img_url}}/{{this.thumbnail.url}}-thumbnail-jpeg.jpeg" type="image/webp" />
                    
                        <img width="92" height="120" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw== "
                            alt="{{this.title}}" onerror="this.onerror=null;this.src='/img/404.jpg';" />
                    </picture>
                </div>
                
                
                <div class="grade-overlay"></div>
                <div class="grade grade--bottom">
                    <i class="far fa-star"><span class="num">{{totalRating this.rate.rateCount this.rate.rateValue}}</span></i>
                </div>
                <info>
                    <a href="./comic/{{this.slug}}"><title class="title title--ellipsis">{{this.title}}</title></a> 
                    <chapter-box>
                        {{#each (limit lastest_chapters 2)}}
                        <a href="/comic/{{../this.slug}}/{{this.chapter}}">
                            <chapter class="chapter" id="chapter-{{this._id}}">{{replaceHyphenIntoSpace this.chapter}}<span class="left-auto">{{CalcTimeEnglish this.updatedAt}}</span></chapter>
                        </a>
                        {{/each}}
                    </chapter-box>
                </info>
            </item>
            {{/each}}
        </grid-container>

        {{> pagination}} 
        

    </wrapper-big>
</section>

