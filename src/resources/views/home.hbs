                <source srcset="{{../img_url}}/{{this.url}}-thumbnail.webp" type="image/webp" media="(min-width: 1200px)" />
                <source srcset="{{../img_url}}/{{this.url}}-thumbnail.jpeg" type="image/jpeg" media="(min-width: 1200px)" />
            
