<style>
    .alert {
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        animation: slide-in-top 0.5s ease forwards;
    }

    @keyframes slide-in-top {
        from {
            top: -50%;
        }

        to {
            top: 5%;
        }
    }

    .emp-profile {
        padding: 3%;
        margin-top: 3%;
        margin-bottom: 3%;
        border-radius: 0.5rem;
        background: #fff;
